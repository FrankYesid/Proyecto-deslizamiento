# Application Settings
PROJECT_NAME=Satellite Image Classification
API_V1_STR=/api/v1

# Database Settings
DATABASE_URL=sqlite:///./satellite.db

# ML Model Settings
MODEL_DIR=models
DEFAULT_MODEL=satellite_classifier

# Satellite Imagery Settings
MAX_IMAGE_SIZE=10485760  # 10MB in bytes
SUPPORTED_IMAGE_FORMATS=.jpg,.jpeg,.png,.tiff

# CORS Settings
BACKEND_CORS_ORIGINS=*  # Comma separated list of origins

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services
# Add external service URLs and credentials here if needed
# EXTERNAL_SERVICE_URL=https://api.example.com
# EXTERNAL_SERVICE_KEY=your-api-key-here
